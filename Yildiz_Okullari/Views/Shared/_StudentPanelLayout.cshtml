@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<title>W3.CSS</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<style>
    .w3-container.w3-teal {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

        .w3-container.w3-teal img {
            max-width: 100px;
            max-height: 100px;
            margin-left: auto; /* İstenilen aralığı ayarlayabilirsiniz */
        }

        .w3-container.w3-teal h1 {
            margin: 0; /* H1 etiketinin varsayılan margin'ini sıfırlayın */
            display: flex;
            align-items: center;
        }
</style>

<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item">Ögrenci Paneli</h3>
        <a href="#" class="w3-bar-item w3-button">Dersler</a>
        <a href="#" class="w3-bar-item w3-button">Sınıf</a>
        <a href="~/Student/UserInformation" class="w3-bar-item w3-button">Bilgilerim</a>
        <a href="~/Login/Login" class="w3-bar-item w3-button">Çıkış</a>
    </div>
    <!-- Page Content -->
    <div style="margin-left:15%">
        <div class="w3-container w3-teal">
            <h1>
                @RenderSection("CustomHeader", required: false)
            </h1>
            <img src="~/img/yildiz_okulları_logo.png" align="right" />
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>
    </div>
</body>
</html>
