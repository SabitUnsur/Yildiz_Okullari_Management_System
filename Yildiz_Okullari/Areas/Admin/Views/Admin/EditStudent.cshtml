@model PersonUpdateViewModel
@{
    ViewData["Title"] = "EditStudent";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-5">
                        @if (TempData["SuccessMessage"]!=null)
                        {
                            <div class="alert alert-info" role="alert">@TempData["SuccessMessage"]</div>
                        }
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <form asp-controller="Admin" asp-area="Admin" asp-action="EditStudent" method="post">

                            <div class="form-group">
                                <label class="form-label" for="Name" asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="Surname" asp-for="Surname"></label>
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="form-label" for="StudentNumber" asp-for="StudentNumber"></label>
                                <input asp-for="StudentNumber" class="form-control" />
                                <span asp-validation-for="StudentNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="StudentNumber" asp-for="Grade"></label>
                                <input asp-for="Grade" class="form-control" />
                                <span asp-validation-for="Grade" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="Branch" asp-for="Branch"></label>
                                <input asp-for="Branch" class="form-control" />
                                <span asp-validation-for="Branch" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label class="form-label" for="Email" asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="PhoneNumber" asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="MotherFullName" asp-for="MotherFullName"></label>
                                <input asp-for="MotherFullName" class="form-control" />
                                <span asp-validation-for="MotherFullName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="FatherFullName" asp-for="FatherFullName"></label>
                                <input asp-for="FatherFullName" class="form-control" />
                                <span asp-validation-for="FatherFullName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="MotherNumber" asp-for="MotherNumber"></label>
                                <input asp-for="MotherNumber" class="form-control" />
                                <span asp-validation-for="MotherNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label class="form-label" for="FatherNumber" asp-for="FatherNumber"></label>
                                <input asp-for="FatherNumber" class="form-control" />
                                <span asp-validation-for="FatherNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="d-flex justify-content-between align-items-center">
                                    <button class="btn btn-outline-secondary " style="margin-top:20px;" type="submit">Kaydet</button>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

