@model RoleUpdateViewModel
@{
    ViewData["Title"] = "RoleUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>RoleUpdate</h1>

<form asp-action="RoleUpdate" asp-area="Admin" asp-controller="Role" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-between">
        <div class="form-group mt-3">
            <input type="submit" value="Güncelle" class="btn btn-primary" />
        </div>
        <div class="mt-3">
            <a class="btn btn-outline-secondary" asp-action="RoleList" asp-area="Admin" asp-controller="Role">Role Listesine Geri Dön</a>
        </div>
    </div>
</form>

